<?xml version="1.0" encoding="utf-8"?>
<component name="GuideView" extends="Group">
    <interface>
        <field id="categorizedPrograms" type="assocarray" alwaysNotify="true" />
        <field id="closed" type="boolean" alwaysNotify="true" />
    </interface>
    <children>
        <!-- Background -->
        <Rectangle id="background" width="1920" height="1080" color="0x000000FF" />
        
        <!-- Header -->
        <Label id="header" translation="[60,60]" font="font:LargeBoldSystemFont" color="0xEEEEEEFF" text="Guide" />
        <Label id="subtitle" translation="[60,120]" font="font:MediumSystemFont" color="0xAAAAAAFF" text="Select a category" />
        
        <!-- Category List - using simple LabelList for now -->
        <LabelList id="categoryList"
                   translation="[60,180]"
                   itemSize="[1800,80]"
                   visible="true"
                   focusable="true" />
        
        <!-- Program List (shown when category selected) -->
        <Rectangle id="programBackground"
                   translation="[60,400]"
                   width="1800"
                   height="600"
                   color="0x202020FF"
                   visible="false" />
        
        <Label id="programHeader"
               translation="[80,420]"
               font="font:MediumBoldSystemFont"
               color="0xEEEEEEFF"
               text="Live Now"
               visible="false" />
        
        <LabelList id="programList"
                   translation="[80,470]"
                   itemSize="[1760,100]"
                   visible="false"
                   focusable="true" />
        
        <!-- Help text -->
        <Label id="helpLabel"
               translation="[60,1020]"
               font="font:SmallSystemFont"
               color="0x888888FF"
               text="◀ ▶ Navigate categories  •  OK to view programs  •  ◀ Back to exit" />
    </children>
    <script type="text/brightscript" uri="pkg:/components/guide/GuideView.brs" />
</component>
